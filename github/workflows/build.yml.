name: Build-Executor
on: [push]
jobs:
  build:
    runs-on: macos-latest
    steps:
      - uses: actions/checkout@v3
      - name: Install Theos
        run: bash -c "$(curl -fsSL https://raw.githubusercontent.com/theos/theos/master/bin/install-theos)"
      - name: Build
        run: |
          export THEOS=~/theos
          make package
      - name: Save Result
        uses: actions/upload-artifact@v3
        with:
          name: Executor-Datei
          path: packages/*.deb
